<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <title>Urunler Sayfasi</title>

    <style>
        .card {
            height: 300px; /* ya da istediğiniz yükseklikte bir değer */
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="row">
            <div class="col-8">
            <% datas.forEach( data => { %>
                    <div class="card mb-3 ">
                        <div class="row">
                            <div class="col-4">
                                <img src="/images/<%= data.imgUrl %>" alt="" width="200px">
                            </div>
                            <div class="col-8">
                                <h5 class="card-title"><%= data.name %></h5>
                                <p class="card-text"><%= data.price %>₺</p>
                                <a href="/product/<%= data.id %>" class="btn btn-primary">Details</a>
                            </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div
</body>
</html>